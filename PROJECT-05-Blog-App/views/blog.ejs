<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3 border border-1 rounded p-5">
      <h1 class="text-center"><%= blog.title %></h1>
      <img
        src="<%= blog.coverImageURL %>"
        alt="<%= blog.coverImageURL %>"
        width="700px"
        class="m-5 img-fluid"
      />
      <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4 p-2">
      <img
        src="<%= blog.createdBy.profileImageURL %>"
        alt="<%= blog.createdBy.profileImageURL %>"
        width="50px"
      />
      <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-4 p-2">
      <h2>Comments (<%= comments.length %>)</h2>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3 mt-3 p-1">
          <input
            type="text"
            name="content"
            placeholder="Enter your comment"
            class="form-control"
          />
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
      </form>

      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <img
          src="<%= comment.createdBy.profileImageURL %>"
          alt="<%= comment.createdBy.profileImageURL %>"
          width="50px"
        />
        <%= comment.createdBy.fullName %>
        <div class="m-3"><%= comment.content %></div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
  </body>
</html>
